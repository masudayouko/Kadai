
<header>
<h2>Editing Book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book' %><br>
    <%= link_to "show",book_path %><span> | </span>
    <%= link_to "back", "/books"%>
<% end %>
</header>