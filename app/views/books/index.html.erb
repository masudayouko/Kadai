
    
    <body>
     <h1>Books</h1>
     <table>
     <thead>
     <tr>
     <th>Title</th>
     <th colspan="3">Body</th>
     </tr>
     </thead>

     <tbody>
     
     <% @books.each do |book| %>
     <tr>
      
      <td><%= book.title %><td><td><%= book.body %></td>
      <td><%= link_to 'Show',book %></td>
      <td><%= link_to 'Edit',edit_book_path(book) %></td>
      <td><%= link_to 'Destroy',books_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr><br>
      <% end %>
    </tbody>
    </table>
    
    <br>





<h4>New book</h4>
<%= form_for(@book) do |f| %>
 

    <h5>Title</h5>
    <%= f.text_field :title %>
 
    <h5>Body</h5>
    <%= f.text_area :body %>
   <br>
    <%= f.submit 'Create Book' %>
 
<% end %>
</body>


